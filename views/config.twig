{% if is_granted('ROLE_ADMIN') %}
<div class="clearfix"></div>
<div class="row-fluid">
<form id="pages" action="/sys/configs/save" method="post" class="form-horizontal">
<input type="hidden" name="form[id]" value="{{ configs.id }}">

<div class="control-group">
    <label class="control-label" for="slug">URL</label>
    <div class="controls">
      <input type="text" class="span12" name="form[siteurl]" id="slug" value="{{ configs.siteurl }}">
    </div>
  </div>

<div class="control-group">
    <label class="control-label" for="slug">Nome Site</label>
    <div class="controls">
      <input type="text" class="span12" name="form[sitename]" id="slug" value="{{ configs.sitename }}">
    </div>
  </div>

  <div class="control-group">
    <label class="control-label" for="slug">Footer Site</label>
    <div class="controls">
      <input type="text" class="span12" name="form[sitefooter]" id="slug" value="{{ configs.sitefooter}}">
    </div>
  </div>

    <div class="control-group">
    <label class="control-label" for="slug">Email</label>
    <div class="controls">
      <input type="text" class="span12" name="form[email]" id="slug" value="{{ configs.email }}">
    </div>
  </div>

  <div class="control-group">
    <label class="control-label" for="slug">Email Server</label>
    <div class="controls">
      <input type="text" class="span12" name="form[emailserver]" id="slug" value="{{ configs.emailserver }}">
    </div>
  </div>

   <div class="control-group">
    <label class="control-label" for="slug">Email Password</label>
    <div class="controls">
      <input type="text" class="span12" name="form[emailpassword]" id="slug" value="{{ configs.emailpassword }}">
    </div>
  </div>

   <div class="control-group">
    <label class="control-label" for="slug">Email Port</label>
    <div class="controls">
      <input type="text" class="span12" name="form[emailsendport]" id="slug" value="{{ configs.emailsendport}}">
    </div>
  </div>

    <div class="control-group">
    <label class="control-label" for="title">Email Contato</label>
    <div class="controls">
      <input type="text"  class="span12"  name="form[emailcontato]" id="slug" value="{{ configs.emailcontato}}">
    </div>
  </div>


 <div class="control-group">
    <label class="control-label" for="title">Foto</label>
    <div class="controls">
      <input type="text"  class="span12"  name="form[foto]" id="slug" value="{{ configs.foto }}">
    </div>
  </div>


  <div class="control-group">
    <label class="control-label" for="title">Telefone Fixo</label>
    <div class="controls">
      <input type="text"  class="span12"  name="form[telefonefixo]" id="slug" value="{{ configs.telefonefixo }}">
    </div>
  </div>

  <div class="control-group">
    <label class="control-label" for="title">Telefone Celular</label>
    <div class="controls">
      <input type="text"  class="span12"  name="form[telefonecelular]" id="slug" value="{{ configs.telefonecelular}}">
    </div>
  </div>



<div class="control-group">
    <div class="controls">

      <button type="submit" class="btn">Editar</button>
    </div>
  </div>


</form>
</div>
<div class="clearfix"></div>
{% endif %}

<script>

tinymce.init({
	selector:'textarea',
	plugins: [
	          "code",
	         ]

	});

$(document).ready(function() {
    // bind 'myForm' and provide a simple callback function
    $('#pages').ajaxForm(function() {
        alert("Configuração Alterada");
    });
});


</script>
