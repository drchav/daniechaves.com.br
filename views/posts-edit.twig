{% if is_granted('ROLE_ADMIN') %}
<div class="clearfix"></div>
<div class="row-fluid">
<form id="pages" action="/sys/posts/save" method="post" class="form-horizontal">
<input type="hidden" name="form[id]" value="{{ page.id }}">
<div class="control-group">
    <label class="control-label" for="slug">Slug</label>
    <div class="controls">
      <input type="text" class="span12" name="form[slug]" id="slug" value="{{ page.slug }}">
    </div>
  </div>


<div class="control-group">
    <label class="control-label" for="title">Título</label>
    <div class="controls">
      <input type="text"  class="span12"  name="form[title]" id="slug" value="{{ page.title }}">
    </div>
  </div>

<div class="control-group">
    <label class="control-label" for="title">Conteúdo</label><br><br>
     <textarea name="form[content]" id="content" style="width: 100%">{{ page.content }}</textarea>

  </div>

<div class="control-group">
    <div class="controls">

      <button type="submit" class="btn">Editar</button>
    </div>
  </div>


</form>
</div>
<div class="clearfix"></div>
{% endif %}

<script>

tinymce.init({
	selector:'textarea',
	plugins: [
	          "code",
	         ]

	});

$(document).ready(function() {
    // bind 'myForm' and provide a simple callback function
    $('#pages').ajaxForm(function() {
        alert("Página Editada");
    });
});


</script>
