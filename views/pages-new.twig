{% if is_granted('ROLE_ADMIN') %}
<div class="clearfix"></div>
<div class="row-fluid">
<form id="pages" action="/sys/pages/save" method="post" class="form-horizontal">
<input type="hidden" name="form[id]" value="">
<div class="control-group">
    <label class="control-label" for="slug">Slug</label>
    <div class="controls">
      <input type="text" class="span12" name="form[slug]" id="slug">
    </div>
  </div>

<div class="control-group">
    <label class="control-label" for="title">Título</label>
    <div class="controls">
      <input type="text"  class="span12"  name="form[title]" id="slug"">
    </div>
  </div>

<div class="control-group">
    <label class="control-label" for="title">Conteúdo</label><br><br><br>
     <textarea name="form[content]" id="content" style="width: 100%"></textarea>

  </div>

<div class="row-fluid">
    <div class="span4 offset8">

      <button type="submit" class="btn btn-primary">Salvar</button>
    </div>
  </div>


</form>
</div>
<div class="clearfix"></div>
{% endif %}

